<UserControl
    x:Class="TinyCollege.Views.School.SchoolInformationView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:TinyCollege.Views.School"
    xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    d:DesignHeight="300"
    d:DesignWidth="300"
    DataContext="{Binding Path=SchoolModule.SelectedSchool, Source={StaticResource Locator}}"
    mc:Ignorable="d">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <materialDesign:ColorZone
            Margin="5"
            Padding="5"
            Background="{DynamicResource PrimaryHueMidBrush}"
            CornerRadius="5">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="Auto" />
                </Grid.ColumnDefinitions>

                <TextBlock
                    Margin="0,0,10,0"
                    Style="{StaticResource TextHeaderStyle}"
                    Text="INFORMATION" />

                <StackPanel Grid.Column="1" HorizontalAlignment="Right">
                    <Button
                        Padding="0"
                        Command="{Binding Path=EditCommand}"
                        Style="{DynamicResource MaterialDesignFlatButton}">
                        <Button.Content>
                            <materialDesign:PackIcon
                                Width="25"
                                Height="25"
                                Foreground="{DynamicResource SecondaryAccentBrush}"
                                Kind="TooltipEdit" />
                        </Button.Content>
                    </Button>
                </StackPanel>
            </Grid>
        </materialDesign:ColorZone>

        <StackPanel Grid.Row="1" Margin="5">
            <TextBlock
                Margin="10,10,10,0"
                Style="{StaticResource TextInfoHeaderStyle}"
                Text="School Name" />

            <TextBlock
                Margin="10,10,10,0"
                Style="{StaticResource TextInfoStyle}"
                Text="{Binding Path=Model.SchoolName}" />

            <TextBlock
                Margin="10,10,10,0"
                Style="{StaticResource TextInfoHeaderStyle}"
                Text="Address" />

            <TextBlock
                Margin="10,10,10,0"
                Style="{StaticResource TextInfoStyle}"
                Text="{Binding Path=Model.SchoolAddress}" />

            <TextBlock
                Margin="10,10,10,0"
                Style="{StaticResource TextInfoHeaderStyle}"
                Text="Dean" />

            <StackPanel DataContext="{Binding Path=Professor}" Orientation="Horizontal">

                <TextBlock
                    Margin="10,10,10,0"
                    Style="{StaticResource TextInfoStyle}"
                    Text="{Binding Path=Model.ProfessorFamilyName}" />
                <TextBlock
                    Margin="10,10,10,0"
                    Style="{StaticResource TextInfoStyle}"
                    Text=", " />
                <TextBlock
                    Margin="10,10,10,0"
                    Style="{StaticResource TextInfoStyle}"
                    Text="{Binding Path=Model.ProfessorFirstName}" />
                <TextBlock
                    Margin="10,10,10,0"
                    Style="{StaticResource TextInfoStyle}"
                    Text=" " />
                <TextBlock
                    Margin="10,10,10,0"
                    Style="{StaticResource TextInfoStyle}"
                    Text="{Binding Path=Model.ProfessorMiddleName[0]}" />
                <TextBlock
                    Margin="10,10,10,0"
                    Style="{StaticResource TextInfoStyle}"
                    Text="." />
            </StackPanel>
        </StackPanel>
    </Grid>
</UserControl>
