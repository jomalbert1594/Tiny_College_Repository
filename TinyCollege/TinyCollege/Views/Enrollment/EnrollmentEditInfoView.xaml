<UserControl
    x:Class="TinyCollege.Views.Enrollment.EnrollmentEditInfoView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:TinyCollege.Views.Enrollment"
    xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    d:DesignHeight="300"
    d:DesignWidth="300"
    mc:Ignorable="d">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <materialDesign:ColorZone
            Margin="5"
            Padding="10"
            Background="{DynamicResource PrimaryHueMidBrush}"
            CornerRadius="5">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>

                <TextBlock
                    Margin="0,0,10,0"
                    Style="{StaticResource TextHeaderStyle}"
                    Text="Edit Form" />

                <StackPanel Grid.Column="1" Orientation="Horizontal">
                    <Button Margin="0,0,10,0" Background="{DynamicResource SecondaryAccentBrush}">
                        <Button.Content>
                            <materialDesign:PackIcon
                                Width="25"
                                Height="25"
                                Kind="ContentSave" />
                        </Button.Content>
                    </Button>

                    <Button Margin="0,0,10,0" Background="{DynamicResource SecondaryAccentBrush}">
                        <Button.Content>
                            <materialDesign:PackIcon
                                Width="25"
                                Height="25"
                                Kind="BlockHelper" />
                        </Button.Content>
                    </Button>
                </StackPanel>
            </Grid>
        </materialDesign:ColorZone>

        <StackPanel Grid.Row="1" Margin="5">
            <TextBlock
                Margin="0,0,0,10"
                Style="{StaticResource TextInfoHeaderStyle}"
                Text="Enrollment Grade" />

            <TextBox Margin="0,0,0,10" Text="" />

            <TextBlock
                Margin="0,0,0,10"
                Style="{StaticResource TextInfoHeaderStyle}"
                Text="Enrollment Date" />

            <TextBox Margin="0,0,0,10" Text="" />
        </StackPanel>
    </Grid>
</UserControl>
